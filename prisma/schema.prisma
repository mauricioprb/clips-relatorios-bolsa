generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model WeeklySlot {
  id          String   @id @default(uuid())
  weekday     Int
  startTime   String
  endTime     String
  description String
  startDate   String?
  endDate     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DefaultActivity {
  id          String   @id @default(uuid())
  description String
  color       String   @default("azul")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DayEntry {
  id          String   @id @default(uuid())
  date        DateTime
  startTime   String
  endTime     String
  description String
  hours       Float
  color       String   @default("azul")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([userId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  
  // Configurações do perfil
  orientador          String?
  laboratorios        String[]
  bolsa               String?
  weeklyWorkloadHours Float   @default(20)
  customHolidays      String? // JSON string com feriados personalizados

  weeklySlots      WeeklySlot[]
  defaultActivities DefaultActivity[]
  dayEntries       DayEntry[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
